<!DOCTYPE html>
<html>
<head>
  <title>Actor Identification</title>
</head>
<body>
  <h1>Actor Identification</h1>
  
  <div id="camera">
    <video id="video" width="100%" height="auto"></video>
    <button id="capture-btn">Capture</button>
  </div>
  
  <canvas id="canvas" width="640" height="480" style="display: none;"></canvas>
  
  <script>
    // Access the camera and display the video stream
    navigator.mediaDevices.getUserMedia({ video: true })
      .then(function(stream) {
        var video = document.getElementById('video');
        video.srcObject = stream;
        video.play();
      })
      .catch(function(err) {
        console.error('Error accessing the camera: ', err);
      });
    
    // Capture the image from the video stream
    var captureButton = document.getElementById('capture-btn');
    captureButton.addEventListener('click', function() {
      var video = document.getElementById('video');
      var canvas = document.getElementById('canvas');
      var context = canvas.getContext('2d');
      
      // Draw the current video frame onto the canvas
      context.drawImage(video, 0, 0, canvas.width, canvas.height);
      
      // Convert the canvas image to a data URL
      var imageDataURL = canvas.toDataURL('image/png');
      
      // Pass the image data URL to the server for processing (to be implemented in Task 3)
      sendImageToServer(imageDataURL);
    });
    
    // Function to send the captured image to the server for processing (to be implemented in Task 3)
    function sendImageToServer(imageData) {
      // Implement this function to send the image data to the server using AJAX or Fetch API
      // You'll need to make a POST request to your web service endpoint for further processing
      // You can use libraries like Axios or jQuery to simplify AJAX requests.
      // Example: axios.post('/process-image', { image: imageData })
      //   .then(function(response) {
      //     // Handle the response from the server
      //     console.log(response.data);
      //   })
      //   .catch(function(error) {
      //     console.error('Error sending image to server: ', error);
      //   });
      
      // For now, you can simply log the image data to the console
      console.log('Image data:', imageData);
    }
  </script>
</body>
</html>
